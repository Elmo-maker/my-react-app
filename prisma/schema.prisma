datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model login {
  id_login Int     @id @default(autoincrement())
  username String
  password String
  email    String
  role     String @default("user")
}

model event_tiket {
  id_event      Int            @id @default(autoincrement())
  nama_event    String
  tanggal_event DateTime
  lokasi String
  detailTiket   detail_tiket[]
}

model detail_tiket {
  id_tiket    Int     @id @default(autoincrement())
  tipe_tiket  String
  harga_tiket Int
  eventId     Int
  event       event_tiket @relation(fields: [eventId], references: [id_event])
}
